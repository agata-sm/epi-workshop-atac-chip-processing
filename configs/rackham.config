params {
    // SNIC compute allocation id
    allocation = ''
}

process {
    executor       = 'slurm'
    clusterOptions = { "-A $params.allocation" }
    // Use node local storage for execution.
    scratch        = '$SNIC_TMP'
}

profiles {

    singularity {
        enabled        = true
        envWhitelist   = 'SNIC_TMP'
    }

}